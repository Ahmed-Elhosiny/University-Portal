@model IEnumerable<Course>
@{
	Layout = "~/Views/Shared/MyLayout.cshtml";
	ViewData["Title"] = "Course Management";
}

<div class="d-flex justify-content-between align-items-center mb-4">
	<h1 class="mb-0">
		<i class="fas fa-book me-2 text-primary"></i>All Courses
	</h1>
	@Html.ActionLink("Add New Course", "Add", "Course", null, new { @class = "btn btn-primary" })
</div>

@if (TempData["SuccessMessage"] != null)
{
	<div class="alert alert-success alert-dismissible fade show" role="alert">
		<i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
		<button type="button" class="btn-close" data-bs-dismiss="alert"></button>
	</div>
}

@if (TempData["ErrorMessage"] != null)
{
	<div class="alert alert-danger alert-dismissible fade show" role="alert">
		<i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
		<button type="button" class="btn-close" data-bs-dismiss="alert"></button>
	</div>
}

@if (!Model.Any())
{
	<div class="alert alert-info text-center">
		<i class="fas fa-info-circle me-2"></i>No courses found.
		<a href="@Url.Action("Add", "Course")" class="alert-link">Add the first course</a>.
	</div>
}
else
{
	<div class="card shadow-sm">
		<div class="card-body p-0">
			<div class="table-responsive">
				<table class="table table-hover table-striped mb-0">
					<thead class="table-dark">
						<tr>
							<th>ID</th>
							<th>Course Name</th>
							<th>Credits</th>
							<th class="text-center">Enrolled Students</th>
							<th class="text-center">Actions</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var course in Model)
						{
							<tr>
								<td class="fw-bold">#@course.Id</td>
								<td>
									<i class="fas fa-book text-primary me-2"></i>@course.Name
								</td>
								<td>
									<span class="badge bg-info">@course.Credits Credit@(course.Credits > 1 ? "s" : "")</span>
								</td>
								<td class="text-center">
									<span class="badge bg-secondary">@ViewData[course.Id.ToString()] Student@((int)ViewData[course.Id.ToString()] != 1 ? "s" : "")</span>
								</td>
								<td class="text-center">
									<div class="btn-group" role="group">
										<a href="@Url.Action("Details", "Course", new { id = course.Id })"
										   class="btn btn-outline-info btn-sm" title="View Details">
											<i class="fas fa-eye"></i>
										</a>
										<a href="@Url.Action("Edit", "Course", new { id = course.Id })"
										   class="btn btn-outline-warning btn-sm" title="Edit">
											<i class="fas fa-edit"></i>
										</a>
										<button type="button" class="btn btn-outline-danger btn-sm"
												onclick="deleteCourse(@course.Id, '@course.Name', @course.Students.Count)" title="Delete">
											<i class="fas fa-trash"></i>
										</button>
									</div>
								</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
}

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header bg-danger text-white">
				<h5 class="modal-title">
					<i class="fas fa-exclamation-triangle me-2"></i>Confirm Delete
				</h5>
				<button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
			</div>
			<div class="modal-body">
				<p>Are you sure you want to delete the course <strong id="courseName"></strong>?</p>
				<div id="studentWarning" class="alert alert-warning d-none">
					<i class="fas fa-exclamation-triangle me-2"></i>
					This course has <span id="studentCount"></span> enrolled student(s).
					You cannot delete it until all students are transferred to other courses.
				</div>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
				<form id="deleteForm" method="post" style="display: inline;">
					@Html.AntiForgeryToken()
					<button type="submit" class="btn btn-danger" id="confirmDelete">
						<i class="fas fa-trash me-1"></i>Delete Course
					</button>
				</form>
			</div>
		</div>
	</div>
</div>

@section Scripts {
	<script>
		function deleteCourse(courseId, courseName, studentCount) {
			document.getElementById('courseName').textContent = courseName;
			document.getElementById('deleteForm').action = '@Url.Action("Delete", "Course")/' + courseId;

			if (studentCount > 0) {
				document.getElementById('studentCount').textContent = studentCount;
				document.getElementById('studentWarning').classList.remove('d-none');
				document.getElementById('confirmDelete').disabled = true;
				document.getElementById('confirmDelete').innerHTML = '<i class="fas fa-ban me-1"></i>Cannot Delete';
			} else {
				document.getElementById('studentWarning').classList.add('d-none');
				document.getElementById('confirmDelete').disabled = false;
				document.getElementById('confirmDelete').innerHTML = '<i class="fas fa-trash me-1"></i>Delete Course';
			}

			new bootstrap.Modal(document.getElementById('deleteModal')).show();
		}
	</script>
}