@model Course
@{
    Layout = "~/Views/Shared/MyLayout.cshtml";
    ViewData["Title"] = "Course Details";
}

<div class="row">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h2 class="mb-0">
                    <i class="fas fa-book me-2"></i>@Model.Name
                </h2>
            </div>
            <div class="card-body">
                <table class="table table-borderless">
                    <tbody>
                        <tr>
                            <th scope="row" class="fw-bold">Course ID:</th>
                            <td>#@Model.Id</td>
                        </tr>
                        <tr>
                            <th scope="row" class="fw-bold">Course Name:</th>
                            <td>@Model.Name</td>
                        </tr>
                        <tr>
                            <th scope="row" class="fw-bold">Credit Hours:</th>
                            <td>
                                <span class="badge bg-info">@Model.Credits Credit@(Model.Credits > 1 ? "s" : "")</span>
                            </td>
                        </tr>
                        <tr>
                            <th scope="row" class="fw-bold">Enrolled Students:</th>
                            <td>
                                <span class="badge bg-success">@Model.Students.Count Student@(Model.Students.Count != 1 ? "s" : "")</span>
                            </td>
                        </tr>
                    </tbody>
                </table>

                <div class="mt-4">
                    <a href="@Url.Action("Edit", "Course", new { id = Model.Id })" class="btn btn-warning me-2">
                        <i class="fas fa-edit me-1"></i>Edit Course
                    </a>
                    <a href="@Url.Action("Index", "Course")" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-1"></i>Back to Courses
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow-sm">
            <div class="card-header bg-secondary text-white">
                <h5 class="mb-0">
                    <i class="fas fa-users me-1"></i>Enrolled Students
                </h5>
            </div>
            <div class="card-body">
                @if (Model.Students.Any())
                {
                    <div class="list-group">
                        @foreach (var student in Model.Students)
                        {
                            <div class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <strong>@student.Name</strong>
                                    <small class="text-muted d-block">Level @student.Level</small>
                                </div>
                                <a href="@Url.Action("Details", "Student", new { id = student.Id })"
                                   class="btn btn-outline-primary btn-sm">
                                    <i class="fas fa-eye"></i>
                                </a>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center text-muted">
                        <i class="fas fa-user-slash fa-2x mb-2"></i>
                        <p>No students enrolled yet.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>