<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - University Management System</title>

	<!-- Bootstrap CSS -->
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
	<!-- Font Awesome -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
	<!-- Custom CSS -->
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/Day5_Assignment.styles.css" asp-append-version="true" />
	@await RenderSectionAsync("Styles", required: false)
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow">
			<div class="container">
				<a class="navbar-brand d-flex align-items-center" href="@Url.Action("Index", "Home")">
					<img src="~/Images/university.jpg" alt="University Logo"
						 class="rounded-circle me-2" style="height: 40px; width: 40px; object-fit: cover;">
					<span class="fw-bold">University Portal</span>
				</a>

				<button class="navbar-toggler" type="button" data-bs-toggle="collapse"
						data-bs-target="#navbarNav" aria-controls="navbarNav"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>

				<div class="collapse navbar-collapse" id="navbarNav">
					<ul class="navbar-nav ms-auto">
						<li class="nav-item">
							<a class="nav-link" asp-controller="Home" asp-action="Index">
								<i class="fas fa-home me-1"></i>Home
							</a>
						</li>

						<!-- Students Dropdown -->
						<li class="nav-item dropdown">
							<a class="nav-link dropdown-toggle" href="#" id="studentsDropdown"
							   role="button" data-bs-toggle="dropdown" aria-expanded="false">
								<i class="fas fa-user-graduate me-1"></i>Students
							</a>
							<ul class="dropdown-menu" aria-labelledby="studentsDropdown">
								<li>
									<a class="dropdown-item" asp-controller="Student" asp-action="Index">
										<i class="fas fa-list me-1"></i>View All Students
									</a>
								</li>
								<li>
									<a class="dropdown-item" asp-controller="Student" asp-action="Add">
										<i class="fas fa-user-plus me-1"></i>Add New Student
									</a>
								</li>
								<li><hr class="dropdown-divider"></li>
								<li>
									<a class="dropdown-item" href="#" onclick="showQuickStats()">
										<i class="fas fa-chart-bar me-1"></i>Quick Stats
									</a>
								</li>
							</ul>
						</li>

						<!-- Courses Dropdown -->
						<li class="nav-item dropdown">
							<a class="nav-link dropdown-toggle" href="#" id="coursesDropdown"
							   role="button" data-bs-toggle="dropdown" aria-expanded="false">
								<i class="fas fa-book me-1"></i>Courses
							</a>
							<ul class="dropdown-menu" aria-labelledby="coursesDropdown">
								<li>
									<a class="dropdown-item" asp-controller="Course" asp-action="Index">
										<i class="fas fa-list me-1"></i>View All Courses
									</a>
								</li>
								<li>
									<a class="dropdown-item" asp-controller="Course" asp-action="Add">
										<i class="fas fa-plus me-1"></i>Add New Course
									</a>
								</li>
								<li><hr class="dropdown-divider"></li>
								<li>
									<a class="dropdown-item" href="#" onclick="showCourseStats()">
										<i class="fas fa-chart-pie me-1"></i>Course Analytics
									</a>
								</li>
							</ul>
						</li>

						<!-- Additional Management Dropdown (Optional) -->
						<li class="nav-item dropdown">
							<a class="nav-link dropdown-toggle" href="#" id="managementDropdown"
							   role="button" data-bs-toggle="dropdown" aria-expanded="false">
								<i class="fas fa-cog me-1"></i>Management
							</a>
							<ul class="dropdown-menu" aria-labelledby="managementDropdown">
								<li>
									<a class="dropdown-item" href="#" onclick="showDashboard()">
										<i class="fas fa-tachometer-alt me-1"></i>Dashboard
									</a>
								</li>
								<li>
									<a class="dropdown-item" href="#" onclick="exportData()">
										<i class="fas fa-download me-1"></i>Export Data
									</a>
								</li>
								<li><hr class="dropdown-divider"></li>
								<li>
									<a class="dropdown-item" href="#" onclick="showSettings()">
										<i class="fas fa-sliders-h me-1"></i>Settings
									</a>
								</li>
							</ul>
						</li>
					</ul>
				</div>
			</div>
		</nav>
	</header>

	<main class="container mt-4">
		<div class="row">
			<div class="col-12">
				<!-- Breadcrumb -->
				<nav aria-label="breadcrumb" class="mb-3">
					<ol class="breadcrumb">
						<li class="breadcrumb-item">
							<a href="@Url.Action("Index", "Home")">
								<i class="fas fa-home"></i> Home
							</a>
						</li>
						@if (ViewContext.RouteData.Values["controller"]?.ToString() != "Home")
						{
							<li class="breadcrumb-item">
								<a href="@Url.Action("Index", ViewContext.RouteData.Values["controller"]?.ToString())s">
									@ViewContext.RouteData.Values["controller"]
								</a>
							</li>
							@if (ViewContext.RouteData.Values["action"]?.ToString() != "Index")
							{
								<li class="breadcrumb-item active" aria-current="page">
									@ViewContext.RouteData.Values["action"]
								</li>
							}
						}
					</ol>
				</nav>

				@RenderBody()
			</div>
		</div>
	</main>

	<footer class="bg-light border-top mt-5 py-4">
		<div class="container">
			<div class="row">
				<div class="col-md-6">
					<p class="text-muted mb-0">
						&copy; 2025 University Management System. All rights reserved.
					</p>
				</div>
				<div class="col-md-6 text-md-end">
					<a asp-controller="Home" asp-action="Privacy" class="text-decoration-none">
						<i class="fas fa-shield-alt me-1"></i>Privacy Policy
					</a>
				</div>
			</div>
		</div>
	</footer>

	<!-- Bootstrap JS -->
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
	<!-- jQuery -->
	<script src="~/lib/jquery/dist/jquery.min.js"></script>

	<!-- Quick Actions JavaScript -->
	<script>
		function showQuickStats() {
			// You can implement this to show a modal with student statistics
			alert('Quick Stats feature - to be implemented!\n\nThis could show:\n• Total Students\n• Students by Level\n• Students by Course\n• Recent Enrollments');
		}

		function showCourseStats() {
			alert('Course Analytics feature - to be implemented!\n\nThis could show:\n• Total Courses\n• Enrollment per Course\n• Popular Courses\n• Course Load Distribution');
		}

		function showDashboard() {
			alert('Dashboard feature - to be implemented!\n\nThis could show:\n• Overview Statistics\n• Recent Activities\n• Charts and Graphs\n• Quick Actions');
		}

		function exportData() {
			alert('Export Data feature - to be implemented!\n\nThis could allow:\n• Export Students to Excel\n• Export Courses to PDF\n• Generate Reports\n• Backup Database');
		}

		function showSettings() {
			alert('Settings feature - to be implemented!\n\nThis could include:\n• System Configuration\n• User Preferences\n• Database Settings\n• Backup Options');
		}
	</script>

	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>